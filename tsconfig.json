{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ESNext"],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "baseUrl": "."
  },

  "ts-node": {
    "files": true,
    "swc": true
  }
}
